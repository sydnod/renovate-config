{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "baseBranches": ["main"],
  "labels": ["dependencies"],
  "automergeStrategy": "squash",
  "automergeSchedule": "after 4am and before 5am",
  "timezone": "Europe/Amsterdam",
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "stabilityDays": 7
    }
  ]
}
